<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityMenu"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NILAI PENJASKES MURID"
        android:gravity="center"
        android:paddingBottom="20dp"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:id="@+id/LabelUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="150dp"
                android:text="NAMA SISWA/SISWI :" />

            <EditText
                android:id="@+id/Murid"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:width="150dp"
                android:inputType="text" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/LabelNilai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="150dp"
                android:text="NILAI PRAKTEK :" />

            <EditText
                android:id="@+id/Nilai"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:width="150dp"
                android:inputType="text" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/NIS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="150dp"
                android:text="NIS :" />

            <EditText
                android:id="@+id/nis"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:width="150dp"
                android:inputType="text" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/Keterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="150dp"
                android:text="KETERANGAN :" />

            <EditText
                android:id="@+id/txtketerangan"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:width="150dp"
                android:inputType="text" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/labPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="150dp"
                android:text="KELAS" />

            <EditText
                android:id="@+id/kelas"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:width="150dp"
                android:inputType="text" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/TahunAjrn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="150dp"
                android:text="TAHUN AJARAN :" />

            <EditText
                android:id="@+id/txtTahunAjrn"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:width="150dp"
                android:inputType="text" />
        </TableRow>

        <RelativeLayout
            android:layout_width="410dp"
            android:layout_height="410dp">


            <Button
                android:id="@+id/btnHasilNilai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="82dp"
                android:layout_marginEnd="24dp"
                android:text="MASUKAN NILAI" />

            <RadioButton
                android:id="@+id/rdobtnrenang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="91dp"
                android:text="PRAKTIK RENANG" />

            <RadioButton
                android:id="@+id/RbtnNilaiHarian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="133dp"
                android:text="NILAI HARIAN" />

            <RadioGroup
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="152dp"
                android:layout_marginTop="1dp">

                <RadioButton
                    android:id="@+id/RBlakilaki"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Laki-Laki" />

                <RadioButton
                    android:id="@+id/RBperempuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Perempuan" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="21dp"
                android:text="JENIS KELAMIN :" />

        </RelativeLayout>

    </TableLayout>
</LinearLayout>
